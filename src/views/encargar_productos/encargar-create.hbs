<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Encargo de productos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body, html {
            height: 100%;
            background-color: #f8f9fa;
        }
        .container {
            max-width: 900px;
        }
        .table-container {
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }
        .table th, .table td {
            vertical-align: middle;
        }
        .btn-añadir {
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body>
    <section class="d-flex align-items-center justify-content-center" style="height: 100vh;">
        <div class="container">
            <div class="table-container">
                <h1 class="text-center mb-4">Productos en lista de encargo</h1>
                <p class="text-center">{{message}}</p>
                <table class="table table-striped table-hover" id="encargoTable">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Folio del producto</th>
                            <th scope="col">Nombre del producto</th>
                            <th scope="col">Stock</th>
                            <th scope="col">Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
                <div class="form-group text-center mt-4">
                        <a href="http://localhost:3000/encargar-productos/get" class="btn btn-secondary mr-2">Volver</a>
                    </div>
            </div>
        </div>
    </section>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            async function fetchEncargar() {
                try {
                    const response = await fetch('http://localhost:3000/products');
                    const encargos = await response.json();

                    const tableBody = document.querySelector('#encargoTable tbody');
                    tableBody.innerHTML = '';

                    encargos.forEach(encargo => {
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td>${encargo.ID_folio}</td>
                            <td>${encargo.name_product}</td>
                            <td>${encargo.stock}</td>
                            <td class="btn-añadir"><button class="btn btn-primary añadirEncargo" data-id="${encargo.ID_folio}">Añadir a la lista de encargo</button></td>
                        `;
                        tableBody.appendChild(row);
                    });
                    document.querySelectorAll('.añadirEncargo').forEach(button => {
                        button.addEventListener('click', async function() {
                            const idFolio = this.getAttribute('data-id');
                            try {
                                const response = await fetch('http://localhost:3000/encargar-productos/create', {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json'
                                    },
                                    body: JSON.stringify({ ID_folio: idFolio })
                                });
                                if (response.ok) {
                                    alert('Producto añadido a la lista de encargo');
                                    fetchEncargar();
                                } else {
                                    const errorData = await response.json();
                                    alert(`Error: ${errorData.message}`);
                                }
                            } catch (error) {
                                console.error('Error:', error);
                                alert('Error al añadir el producto a la lista de encargo');
                            }
                        });
                    });

                } catch (error) {
                    console.error('Error fetching:', error);
                }
            }

            fetchEncargar();
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>
