<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Productos a encargar</title>
</head>
<body>
    <style>
        .card-body {
            overflow-x: auto;
        }
        .table th, .table td {
            white-space: nowrap;
            height: 3rem;
        }
        .col-id { width: 100px; }
        .col-name { width: 200px; }
        .col-description { width: 300px; }
    </style>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-2 mb-4">
                <div class="list-group">
                    <button class="list-group-item list-group-item-action btn btn-primary mb-2"><a href="http://localhost:3000/encargar-productos/create" class="link-underline-light">Crear un registro</a></button>
                    <button class="list-group-item list-group-item-action btn btn-danger"><a href="http://localhost:3000/encargar-productos/delete" class="link-danger link-underline-light">Borrar registro</a></button>
                    <button class="list-group-item list-group-item-action btn btn-success" id="refreshPage"><a class="link-success link-underline-light">Refresh</a></button>
                    <button class="list-group-item list-group-item-action btn btn-dark"><a id="products" href="http://localhost:3000/products/inventario" class="link-dark link-underline-light">Ver productos</a></button>
                    <button class="list-group-item list-group-item-action btn btn-primary"><a href="http://localhost:3000/" class="link-primary link-underline-light">Panel de control</a></button>
                </div>
            </div>
            <div class="col-md-10">
                <div class="card">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h4>Lista de productos a encargar</h4>
                        <input type="text" id="search" class="form-control w-50" placeholder="Buscar productos...">
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-hover" id="encargoTable">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">ID del encargo</th>
                                    <th scope="col">ID_folio</th>
                                    <th scope="col">Nombre del producto</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('search').addEventListener('input', function() {
            const filter = this.value.toLowerCase();
            const rows = document.querySelectorAll('#encargoTable tbody tr');

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(filter) ? '' : 'none';
            });
        });

        
        async function fetchEncargar() {
            try {
                const response = await fetch('http://localhost:3000/encargar-productos');
                const encargos = await response.json();

                const tableBody = document.querySelector('#encargoTable tbody');
                tableBody.innerHTML = '';

                encargos.forEach(encargo => {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td>${encargo.ID_encargar_productos}</td>
                        <td>${encargo.ID_folio}</td>
                        <td>${encargo.product.name_product}</td>
                    `;
                    tableBody.appendChild(row);
                });
            } catch (error) {
                console.error('Error fetching:', error);
            }
        }

        document.addEventListener('DOMContentLoaded', fetchEncargar);

        document.getElementById("refreshPage").addEventListener("click", function(event) {
            event.preventDefault();
            location.reload(true);
        });

        document.querySelector("#refreshPage a").addEventListener("click", function(event) {
            event.preventDefault();
            location.reload(true);
        });

    </script>
</body>
</html>
