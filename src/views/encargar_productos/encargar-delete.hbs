<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Borrar registro</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


    </head>
    <body>
        <section class="d-flex align-items-center justify-content-center" style="height: 100vh; no-repeat center center; background-size: cover;">
            <div class="bg-light p-4 rounded" style="max-width: 500px; width: 100%;">
                <h1 class="text-center mb-4">Eliminar producto a encargar</h1>
                <p class="text-center">{{message}}</p>
                <form id="deleteForm">
                <div class="form-group">
                    <label for="encargoID">ID del encargo:</label>
                    <input type="number" class="form-control" id="encargoID" name="ID_encargar_productos" required>
                </div>
                <div class="form-group text-center mt-4 ">
                    <a href="http://localhost:3000/encargar-productos/get" class="btn btn-secondary mr-2">Volver</a>
                    <input type="submit" value="Borrar" class="btn btn-primary" id="btnBorrar">
                </div>
                </form>
            </div>
        </section>

        <script>
            document.getElementById('deleteForm').addEventListener('submit', async function(event) {
            event.preventDefault();
            const encargoID = document.getElementById('encargoID').value;

            if (encargoID) {
                try {
                const response = await fetch(`http://localhost:3000/encargar-productos/${encargoID}`, {
                    method: 'DELETE',
                });

                if (response.ok) {
                    alert('Producto borrado correctamente de la lista de encargos');
                } else {
                    alert('Error al borrar');
                }
                } catch (error) {
                console.error('Error:', error);
                alert('Error al eliminar el producto de la lista');
                }
            } else {
                alert('Por favor, introduce un ID v√°lido');
            }
            });
</script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    </body>
</html>