<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <title>Productos faltantes</title>
    </head>
    <body>

            <style>
            .card-body {
                overflow-x: auto;
            }
            .table th, .table td {
            white-space: nowrap;
            height: 3rem;
            }
            .col-id { width: 100px; }
            .col-name { width: 200px; }
            .col-description { width: 300px; }
        </style>
    </head>
    <body>
        <div class="container mt-5">
        <div class="row">
            <div class="col-md-2 mb-4">
                    <div class="list-group">

                        <button class="list-group-item list-group-item-action btn btn-dark"><a href="http://localhost:3000/encargar-productos/get" class="link-dark link-underline-light">Encargar productos</a></button>
                        <button class="list-group-item list-group-item-action btn btn-success" id="refreshPage">
                        <a class="link-success link-underline-light">Refresh</a></button>
                        <button class="list-group-item list-group-item-action btn btn-primary"><a href="http://localhost:3000/" class="link-primary link-underline-light">Panel de control</a></button>
                        
                    </div>
            </div>
            <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h4>Lista de productos con bajo stock</h4>
                <input type="text" id="searchProducts" class="form-control w-50" placeholder="Buscar producto...">
                </div>
                <div class="card-body">
                <table class="table table-striped table-hover" id="productTable">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID_folio</th>
                        <th scope="col">Numero de parte</th>
                        <th scope="col">Cod de proveedor</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Precio unitario</th>
                        <th scope="col">Precio de mayoreo</th>
                        <th scope="col">ID de calidad</th>
                        <th scope="col">ID de la categoria</th>
                        <th scope="col">Maquina</th>
                        <th scope="col">Tipo de maquina</th>
                        <th scope="col">Descripcion</th>
                        <th scope="col">Stock</th>
                        <th scope="col">Medidas</th>
                        <th scope="col">Lugar de almacenamiento</th>
                        <th scope="col">Imagen</th>            
                    </tr>
                    </thead>
                    <tbody>
                    
                    </tbody>
                </table>
                </div>
            </div>
            </div>
        </div>
        </div>
        
        
        <script>
        document.getElementById('searchProducts').addEventListener('input', function() {
        const filter = this.value.toLowerCase();
        const rows = document.querySelectorAll('#productTable tbody tr');

        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(filter) ? '' : 'none';
        });
        });
        </script>
        <script>
        document.getElementById('searchProducts').addEventListener('input', function() {
            const filter = this.value.toLowerCase();
            const rows = document.querySelectorAll('#productTable tbody tr');

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(filter) ? '' : 'none';
            });
        });

        async function fetchProducts() {
            try {
                const response = await fetch('http://localhost:3000/products');
                const productos = await response.json();

                const tableBody = document.querySelector('#productTable tbody');
                tableBody.innerHTML = '';

                productos.forEach(products => {
                    if(products.stock <= 50){
                        const row = document.createElement('tr');
                    row.innerHTML = 
                        `<td>${products.ID_folio}</td>
                        <td>${products.ID_num_part}</td>
                        <td>${products.ID_cod_proveedor}</td>
                        <td>${products.name_product}</td>
                        <td>${products.unit_price}</td>
                        <td>${products.precio_mayoreo}</td>
                        <td>${products.ID_quality}</td>
                        <td>${products.ID_category}</td>
                        <td>${products.para_que_maquina}</td>
                        <td>${products.tipo_maquina}</td>
                        <td>${products.description}</td>
                        <td>${products.stock}</td>
                        <td>${products.medidas}</td>
                        <td>${products.lugar_almacenamiento}</td>
                        <td>${products.image ? `<img src="/${products.image}" alt="Imagen" width="50rem" height="50rem">` : 'No image'}</td>`;
                    tableBody.appendChild(row);
                    }
                });
            } catch (error) {
                console.error('Error fetching products:', error);
            }
        }

        document.addEventListener('DOMContentLoaded', fetchProducts);

        
    </script>
    <script>

        document.getElementById("refreshPage").addEventListener("click", function(event) {
            event.preventDefault();
            location.reload(true); 
        });

        document.querySelector("#refreshPage a").addEventListener("click", function(event) {
            event.preventDefault();
            location.reload(true);
        });
    </script>

    </body>
</html>
