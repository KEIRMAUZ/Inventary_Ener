<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Registrar relacion</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background-color: #f8f9fa;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .bg-light-custom {
            background-color: #ffffff;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            width: 100%;
        }
        .form-control {
            border-radius: 10px;
        }
        .btn-custom {
            border-radius: 20px;
            padding: 10px 20px;
        }
    </style>
</head>
<body>
    <section class="d-flex align-items-center justify-content-center" style="height: 100vh;">
        <div class="bg-light-custom p-4 rounded">
            <h1 class="text-center mb-4 text-primary">Crear relación</h1>
            <p class="text-center text-secondary">{{message}}</p>
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4>Relación empresa - producto</h4>
                    <input type="text" id="search" class="form-control w-50" placeholder="Buscar...">
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover" id="surtirProductoTable">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">ID de la empresa</th>
                                <th scope="col">Nombre de la empresa</th>
                                <th scope="col">Contacto de la empresa</th>
                                <th scope="col">Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                    <div class="d-flex justify-content-between mt-4">
                    <a href="http://localhost:3000/surtir-and-productos/get" class="btn btn-secondary">Volver</a>
                </div>
                </div>
                
            </div>
        </div>
    </section>

    <!-- Modal -->
    <div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="productModalLabel">Seleccionar Producto</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <table class="table table-striped table-hover" id="productTable">
                        <thead>
                            <tr>
                                <th scope="col">ID Folio</th>
                                <th scope="col">Nombre del Producto</th>
                                <th scope="col">Descripción</th>
                                <th scope="col">Precio Unitario</th>
                                <th scope="col">Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('search').addEventListener('input', function() {
            const filter = this.value.toLowerCase();
            const rows = document.querySelectorAll('#surtirProductoTable tbody tr');

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(filter) ? '' : 'none';
            });
        });

        async function fetchSurtirProductos() {
            try {
                const response = await fetch('http://localhost:3000/surtir-and-productos');
                const surtirProducto = await response.json();

                const tableBody = document.querySelector('#surtirProductoTable tbody');
                tableBody.innerHTML = '';

                surtirProducto.forEach(surtirProduct => {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td>${surtirProduct.ID_surtir}</td>
                        <td>${surtirProduct.nombre_empresa}</td>
                        <td>${surtirProduct.contacto}</td>
                        <td><button class="btn btn-success asociar-producto" data-id="${surtirProduct.ID_surtir}">Asociar producto</button></td>
                    `;
                    tableBody.appendChild(row);
                });

                document.querySelectorAll('.asociar-producto').forEach(button => {
                    button.addEventListener('click', function() {
                        const idEmpresa = this.getAttribute('data-id');
                        showProductModal(idEmpresa);
                    });
                });
            } catch (error) {
                console.error('Error fetching:', error);
            }
        }

        document.addEventListener('DOMContentLoaded', fetchSurtirProductos);

        async function showProductModal(idEmpresa) {
            try {
                const response = await fetch('http://localhost:3000/products');
                const productos = await response.json();

                const tableBody = document.querySelector('#productTable tbody');
                tableBody.innerHTML = '';

                productos.forEach(product => {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td>${product.ID_folio}</td>
                        <td>${product.name_product}</td>
                        <td>${product.description}</td>
                        <td>${product.unit_price}</td>
                        <td><button class="btn btn-primary seleccionar-producto" data-id="${product.ID_folio}" data-empresa-id="${idEmpresa}">Seleccionar</button></td>
                    `;
                    tableBody.appendChild(row);
                });

                document.querySelectorAll('.seleccionar-producto').forEach(button => {
                    button.addEventListener('click', function() {
                        const idProducto = this.getAttribute('data-id');
                        const idEmpresa = this.getAttribute('data-empresa-id');
                        asociarProductoAEmpresa(idEmpresa, idProducto);
                    });
                });

                const modal = new bootstrap.Modal(document.getElementById('productModal'));
                modal.show();
            } catch (error) {
                console.error('Error fetching products:', error);
            }
        }

        async function asociarProductoAEmpresa(idEmpresa, idProducto) {
            try {
                const response = await fetch('http://localhost:3000/surtir-and-productos', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        ID_surtir: idEmpresa,
                        ID_folio: idProducto
                    })
                });

                if (response.ok) {
                    const modal = bootstrap.Modal.getInstance(document.getElementById('productModal'));
                    modal.hide();
                    alert('Producto asociado exitosamente');
                } else {
                    const errorData = await response.json();
                    alert(`Error: ${errorData.message}`);
                }
            } catch (error) {
                console.error('Error associating product:', error);
                alert('Error al asociar el producto');
            }
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>
