<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Eliminar Producto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background-color: #f8f9fa;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Arial', sans-serif;
        }
        .card {
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
        }
        .card-header {
            background-color: #a2a2a6;
            color: white;
            border-top-left-radius: 20px;
            border-top-right-radius: 20px;
        }
        .btn-primary {
            background-color: #5151e5;
            border: none;
        }
        .btn-primary:hover {
            background-color: #4141d4;
        }
        .btn-secondary {
            border: none;
        }
    </style>
</head>
<body>
    <div class="card bg-light p-4" style="max-width: 500px; width: 100%;">
        <div class="card-header text-center">
            <h2>Eliminar Producto</h2>
        </div>
        <div class="card-body">
            <p class="text-center">{{message}}</p>
            <form action="/product/delete" id="deleteForm">
                <div class="mb-3">
                    <label for="surtirID" class="form-label">ID de la empresa relacionada:</label>
                    <input type="number" class="form-control" id="surtirID" name="ID_surtir" required>
                </div>
                <div class="mb-3">
                    <label for="productId" class="form-label">ID del producto a eliminar:</label>
                    <input type="number" class="form-control" id="productId" name="ID_folio" required>
                </div>
                <div class="d-flex justify-content-between mt-4">
                    <a href="http://localhost:3000/surtir-and-productos/get" class="btn btn-secondary">Volver</a>
                    <input type="submit" value="Borrar" class="btn btn-danger" id="btnBorrar">
                </div>
            </form>
        </div>
    </div>

    <script>
        document.getElementById('deleteForm').addEventListener('submit', async function(event) {
            event.preventDefault();
            const productId = document.getElementById('productId').value;
            const surtirID= document.getElementById('surtirID').value;
            if (productId) {
                try {
                    const response = await fetch(`http://localhost:3000/surtir-and-productos/${surtirID}/${productId}`, {
                        method: 'DELETE',
                    });

                    if (response.ok) {
                        alert('Relacion eliminada correctamente');
                    } else {
                        alert('Error al borrar la relacion.');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Error al borrar la relacion');
                }
            } else {
                alert('Por favor, introduce un ID v√°lido');
            }
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>
