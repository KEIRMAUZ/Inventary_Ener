<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Actualizar categoria</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4>Actualizar roles</h4>
            </div>
            <div class="card-body">
                <form id="updateRolForm">
                    <div class="form-group mb-3">
                        <label for="ID_rol_act">ID del rol a actualizar</label>
                        <input type="number" class="form-control" id="ID_rol_act" name="ID_rol_act" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="rolename">Nombre</label>
                        <input type="text" class="form-control" id="rolename" name="role_name">
                    </div>
                    <div class="d-flex justify-content-between">
                        <a href="http://localhost:3000/roles/getRoles" class="btn btn-secondary">Volver</a>
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <script>
    document.getElementById('updateRolForm').addEventListener('submit', async function(event) {
        event.preventDefault();

        const form = event.target;
        const formData = new FormData(form);
        const ID_rol_act = formData.get('ID_rol_act');

        const roleData = {};
        formData.forEach((value, key) => {
            if (value) {
                roleData[key] = value;
            }
        });

        try {
            const response = await fetch(`http://localhost:3000/roles/${ID_rol_act}`, {
                method: 'PATCH',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(roleData)
            });

            if (!response.ok) {
                throw new Error('Error al actualizar el rol');
            }

            const result = await response.json();
            console.log('Rol actualizado', result);
            alert('Rol actualizado con Ã©xito');
        } catch (error) {
            console.error('Error:', error);
            alert('Hubo un problema al actualizar el rol');
        }
    });
    </script>
</body>
</html>
