<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <title>Personas</title>
    </head>
    <body>

            <style>
            .card-body {
                overflow-x: auto;
            }
            .table th, .table td {
            white-space: nowrap;
            height: 3rem;
            }
            .col-id { width: 100px; }
            .col-name { width: 200px; }
            .col-description { width: 300px; }
        </style>
    </head>
    <body>
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-2 mb-4">
                    <div class="list-group">
                        <button class="list-group-item list-group-item-action btn btn-primary mb-2" ><a href="http://localhost:3000/persons/create" class="link-underline-light">Crear persona</a></button>
                        <button class="list-group-item list-group-item-action btn btn-warning mb-2"><a href="http://localhost:3000/persons/update" class="link-warning link-underline-light">Actualizar persona</a></button>
                        <button class="list-group-item list-group-item-action btn btn-danger"><a href="http://localhost:3000/persons/delete" class="link-danger link-underline-light">Borrar persona</a></button>
                        <button class="list-group-item list-group-item-action btn btn-success" id="refreshPage">
                        <a class="link-success link-underline-light">Refresh</a></button>
                        <button class="list-group-item list-group-item-action btn btn-dark"><a id="products" href="http://localhost:3000/roles/getRoles" class="link-dark link-underline-light">Ver roles</a></button>
                        <button class="list-group-item list-group-item-action btn btn-primary"><a id="products" href="http://localhost:3000/" class="link-primary link-underline-light">Panel de control</a></button>
                    </div>
                </div>
                <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h4>Lista de personas</h4>
                <input type="text" id="searchPerson" class="form-control w-50" placeholder="Buscar personas...">
                </div>
                <div class="card-body">
                <table class="table table-striped table-hover" id="personTable">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID de la persona</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>   
                        <th scope="col">Telefono</th>
                        <th scope="col">Rol que desempe√±a</th>             
                    </tr>
                    </thead>
                    <tbody>
                    
                    </tbody>
                </table>
                </div>
            </div>
            </div>
        </div>
        </div>

        <script>
        document.getElementById('searchPerson').addEventListener('input', function() {
        const filter = this.value.toLowerCase();
        const rows = document.querySelectorAll('#personTable tbody tr');

        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(filter) ? '' : 'none';
        });
        });
        </script>
        <script>

        document.getElementById("refreshPage").addEventListener("click", function(event) {
            event.preventDefault();
            location.reload(true); 
        });

        document.querySelector("#refreshPage a").addEventListener("click", function(event) {
            event.preventDefault();
            location.reload(true);
        });
    </script>

        <script>
            async function fetchPersons() {
                try {
                    const response = await fetch('http://localhost:3000/persons');
                    const persons = await response.json();

                    const tableBody = document.querySelector('#personTable tbody');
                    tableBody.innerHTML = '';

                    persons.forEach(person => {
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td>${person.ID_person}</td>
                            <td>${person.name}</td>
                            <td>${person.lastname}</td>
                            <td>${person.phone}</td>
                            <td>${person.role.role_name}</td>
                        `;
                        tableBody.appendChild(row);
                    });
                } catch (error) {
                    console.error('Error fetching persons:', error);
                }
            }

            document.addEventListener('DOMContentLoaded', fetchPersons);
        </script>
    </body>
</html>