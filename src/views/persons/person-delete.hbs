<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Eliminar persona</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <style>
            body {
                background-color: #f8f9fa;
                height: 100vh;
                display: flex;
                align-items: center;
                justify-content: center;
            }
            .bg-light-custom {
                background-color: #ffffff;
                border-radius: 15px;
                padding: 30px;
                box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
                max-width: 500px;
                width: 100%;
            }
            .form-control {
                border-radius: 10px;
            }
            .btn-custom {
                border-radius: 20px;
                padding: 10px 20px;
            }
        </style>
    </head>
    <body>
        <section class="d-flex align-items-center justify-content-center">
            <div class="bg-light-custom p-4 rounded">
                <h1 class="text-center mb-4 text-danger">Eliminar persona</h1>
                <p class="text-center text-secondary">{{message}}</p>
                <form action="/persons/delete" id="deleteForm">
                    <div class="mb-3">
                        <label for="personID" class="form-label">ID de la persona a eliminar:</label>
                        <input type="number" class="form-control" id="personID" name="ID_person" required>
                    </div>
                    <div class="text-center mt-4">
                        <a href="http://localhost:3000/persons/getPersons" class="btn btn-secondary btn-custom mr-2">Volver</a>
                        <input type="submit" value="Borrar" class="btn btn-primary btn-custom" id="btnBorrar">
                    </div>
                </form>
            </div>
        </section>

        <script>
            document.getElementById('deleteForm').addEventListener('submit', async function(event) {
                event.preventDefault();
                const personID = document.getElementById('personID').value;

                if (personID) {
                    try {
                        const response = await fetch(`http://localhost:3000/persons/${personID}`, {
                            method: 'DELETE',
                        });

                        if (response.ok) {
                            alert('Persona borrada correctamente');
                        } else {
                            alert('Error al borrar la persona, verifique que no esté asociada a ningún pedido');
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        alert('Error al borrar a la persona');
                    }
                } else {
                    alert('Por favor, introduce un ID válido');
                }
            });
        </script>

        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    </body>
</html>
