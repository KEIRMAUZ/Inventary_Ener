<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <title>Empresas para surtir</title>
    </head>
    <body>

            <style>
            .card-body {
                overflow-x: auto;
            }
            .table th, .table td {
            white-space: nowrap;
            height: 3rem;
            }
            .col-id { width: 100px; }
            .col-name { width: 200px; }
            .col-description { width: 300px; }
        </style>
    </head>
    <body>
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-2 mb-4">
                    <div class="list-group">
                        <button class="list-group-item list-group-item-action btn btn-primary mb-2" ><a href="http://localhost:3000/surtir-productos/create" class="link-underline-light">Crear nuevo registro</a></button>
                        <button class="list-group-item list-group-item-action btn btn-warning mb-2"><a href="http://localhost:3000/surtir-productos/update" class="link-warning link-underline-light">Actualizar registro</a></button>
                        <button class="list-group-item list-group-item-action btn btn-danger"><a href="http://localhost:3000/surtir-productos/delete" class="link-danger link-underline-light">Borrar registro</a></button>
                        <button class="list-group-item list-group-item-action btn btn-success" id="refreshPage">
                        <a class="link-success link-underline-light">Refresh</a></button>
                        
                        <button class="list-group-item list-group-item-action btn btn-dark"><a  href="http://localhost:3000/surtir-and-productos/get" class="link-dark link-underline-light">Asociar productos</a></button>
                        <button class="list-group-item list-group-item-action btn btn-primary"><a  href="http://localhost:3000/" class="link-primary link-underline-light">Panel de control</a></button>
                    </div>
                </div>
                <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h4>Lista de empresas</h4>
                <input type="text" id="searchSurtir" class="form-control w-50" placeholder="Buscar...">
                </div>
                <div class="card-body">
                <table class="table table-striped table-hover" id="surtirTable">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID de la empresa para surtir</th>
                        <th scope="col">Nombre</th>  
                        <th scope="col">Localizaci√≥n</th>
                        <th scope="col">Contacto</th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
                </div>
            </div>
            </div>
        </div>
        </div>

        <script>
        document.getElementById('searchSurtir').addEventListener('input', function() {
        const filter = this.value.toLowerCase();
        const rows = document.querySelectorAll('#surtirTable tbody tr');

        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(filter) ? '' : 'none';
        });
        });
        </script>
        <script>
            document.getElementById("refreshPage").addEventListener("click", function(event) {
                event.preventDefault();
                location.reload(true); 
            });

            document.querySelector("#refreshPage a").addEventListener("click", function(event) {
                event.preventDefault();
                location.reload(true);
            });
        </script>

        <script>
            async function fetchRole() {
                try {
                    const response = await fetch('http://localhost:3000/surtir-productos');
                    const surtir = await response.json();

                    const tableBody = document.querySelector('#surtirTable tbody');
                    tableBody.innerHTML = '';

                    surtir.forEach(surti => {
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td>${surti.ID_surtir}</td>
                            <td>${surti.nombre_empresa}</td>
                            <td>${surti.localizacion}</td>
                            <td>${surti.contacto}</td>
                        `;
                        tableBody.appendChild(row);
                    });
                } catch (error) {
                    console.error('Error fetching roles:', error);
                }
            }

            document.addEventListener('DOMContentLoaded', fetchRole);
        </script>
    </body>
</html>