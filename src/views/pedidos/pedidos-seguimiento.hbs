<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Seguimiento del pedido</title>
</head>
<body>
    <style>
        .card-body {
            overflow-x: auto;
        }
        .table th, .table td {
            white-space: nowrap;
            height: 3rem;
        }
        .col-id { width: 100px; }
        .col-name { width: 200px; }
        .col-description { width: 300px; }
    </style>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-2 mb-4">
                <div class="list-group">
                    <button class="list-group-item list-group-item-action btn btn-primary mb-2"><a href="http://localhost:3000/pedidos/create" class="link-underline-light">Crear un pedido</a></button>
                    <button class="list-group-item list-group-item-action btn btn-danger mb-2"><a href="http://localhost:3000/pedidos/borrar-producto" class="link-underline-light">Borrar un producto de un pedido</a></button>
                    <button class="list-group-item list-group-item-action btn btn-success" id="refreshPage"><a class="link-success link-underline-light">Refresh</a></button>
                    <button class="list-group-item list-group-item-action btn btn-dark"><a class="link-dark link-underline-light" href="http://localhost:3000/pedidos/get">Pedidos</a></button>
                    <button class="list-group-item list-group-item-action btn btn-primary"><a href="http://localhost:3000/" class="link-primary link-underline-light">Panel de control</a></button>
                </div>
            </div>
            <div class="col-md-10">
                <div class="card">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h4>Seguimiento de pedidos</h4>
                        <input type="text" id="search" class="form-control w-50" placeholder="Buscar pedidos...">
                    </div>
                    <div class="card-body">
                        <div class="accordion" id="pedidosAccordion">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('search').addEventListener('input', function() {
            const filter = this.value.toLowerCase();
            const items = document.querySelectorAll('#pedidosAccordion .accordion-item');

            items.forEach(item => {
                const text = item.textContent.toLowerCase();
                item.style.display = text.includes(filter) ? '' : 'none';
            });
        });

        async function fetchEncargar() {
            try {
                const response = await fetch('http://localhost:3000/pedido-productos');
                const pedidos = await response.json();

                const accordion = document.getElementById('pedidosAccordion');
                accordion.innerHTML = '';

                pedidos.forEach((pedido, index) => {
                    const productDetails = pedido.productoPedidos.map(pp => `
                        <div class="mb-2">
                            <p class="h6">ID del Producto: ${pp.product.ID_folio}</p>
                            <p>Nombre: ${pp.product.name_product}</p>
                            <p>Precio: $${pp.product.unit_price}</p>
                            <p>Cantidad: ${pp.Cantidad}</p>
                        </div>
                    `).join('');

                    const dateTime = new Date(pedido.fecha);
                    const formattedDate = dateTime.toLocaleDateString();
                    const formattedTime = dateTime.toLocaleTimeString();
                    const accordionItem = document.createElement('div');
                    accordionItem.className = 'accordion-item';
                    
                    accordionItem.innerHTML = `
                        <h2 class="accordion-header" id="heading${index}">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse${index}" aria-expanded="false" aria-controls="collapse${index}">
                                Pedido ID: ${pedido.ID_pedido} - ${pedido.name_person} - Fecha del pedido: ${formattedDate} a las ${formattedTime}
                            </button>
                        </h2>
                        <div id="collapse${index}" class="accordion-collapse collapse" aria-labelledby="heading${index}" data-bs-parent="#pedidosAccordion">
                            <div class="accordion-body">
                                <p><strong>Nombre de la persona:</strong> ${pedido.name_person}</p>
                                <p><strong>Monto total:</strong> $${pedido.amount}</p>
                                <p><strong>Descuento aplicado:</strong> ${pedido.descuento}%</p>
                                <h5>Productos del pedido:</h5>
                                ${productDetails}
                            </div>
                        </div>
                    `;
                    accordion.appendChild(accordionItem);
                });
            } catch (error) {
                console.error('Error fetching:', error);
            }
        }

        document.addEventListener('DOMContentLoaded', fetchEncargar);

        document.getElementById("refreshPage").addEventListener("click", function(event) {
            event.preventDefault();
            location.reload(true);
        });

        document.querySelector("#refreshPage a").addEventListener("click", function(event) {
            event.preventDefault();
            location.reload(true);
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>