<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Actualizar Calidad</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4>Actualizar Calidad</h4>
            </div>
            <div class="card-body">
                <form id="updateQualityForm">
                    <div class="form-group mb-3">
                        <label for="ID_quality_act">ID de la calidad a actualizar</label>
                        <input type="number" class="form-control" id="ID_quality_act" name="ID_quality_act" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="quality_name">Nombre de la calidad</label>
                        <input type="text" class="form-control" id="quality_name" name="quality_name">
                    </div>
                    <div class="d-flex justify-content-between">
                        <a href="http://localhost:3000/qualitys/getQualitys" class="btn btn-secondary">Volver</a>
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <script>
    document.getElementById('updateQualityForm').addEventListener('submit', async function(event) {
        event.preventDefault();

        const form = event.target;
        const formData = new FormData(form);
        const ID_quality_act = formData.get('ID_quality_act');

        const qualityData = {};
        formData.forEach((value, key) => {
            if (value) {
                qualityData[key] = value;
            }
        });

        try {
            const response = await fetch(`http://localhost:3000/qualitys/${ID_quality_act}`, {
                method: 'PATCH',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(qualityData)
            });

            if (!response.ok) {
                throw new Error('Error al actualizar la calidad');
            }

            const result = await response.json();
            console.log('Calidad actualizada', result);
            alert('Calidad actualizada con Ã©xito');
        } catch (error) {
            console.error('Error:', error);
            alert('Hubo un problema al actualizar la calidad');
        }
    });
    </script>
</body>
</html>
