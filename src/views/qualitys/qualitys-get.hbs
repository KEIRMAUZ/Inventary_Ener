<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <title>Calidades</title>
    </head>
    <body>

            <style>
            .card-body {
                overflow-x: auto;
            }
            .table th, .table td {
            white-space: nowrap;
            height: 3rem;
            }
            .col-id { width: 100px; }
            .col-name { width: 200px; }
            .col-description { width: 300px; }
        </style>
    </head>
    <body>
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-2 mb-4">
                    <div class="list-group">
                        <button class="list-group-item list-group-item-action btn btn-primary mb-2" ><a href="http://localhost:3000/qualitys/create" class="link-underline-light">Crear calidad</a></button>
                        <button class="list-group-item list-group-item-action btn btn-warning mb-2"><a href="" class="link-warning link-underline-light">Actualizar calidad</a></button>
                        <button class="list-group-item list-group-item-action btn btn-danger"><a href="http://localhost:3000/qualitys/delete" class="link-danger link-underline-light">Borrar calidad</a></button>
                        <button class="list-group-item list-group-item-action btn btn-success"><a id="refreshPage" class="link-success link-underline-light">Refresh</a></button>
                    </div>
                </div>
                <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h4>Lista de Calidades</h4>
                <input type="text" id="searchQuality" class="form-control w-50" placeholder="Buscar calidad...">
                </div>
                <div class="card-body">
                <table class="table table-striped table-hover" id="qualityTable">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID de la calidad</th>
                        <th scope="col">Nombre</th>             
                    </tr>
                    </thead>
                    <tbody>
                    
                    </tbody>
                </table>
                </div>
            </div>
            </div>
        </div>
        </div>

        <script>
        document.getElementById('searchQuality').addEventListener('input', function() {
        const filter = this.value.toLowerCase();
        const rows = document.querySelectorAll('#qualityTable tbody tr');

        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(filter) ? '' : 'none';
        });
        });
        </script>
        <script>
            const refresh = document.getElementById("refreshPage")

            refresh.addEventListener("click",function(){
                location.reload(true)
            })
        </script>

        <script>
            async function fetchQuality() {
                try {
                    const response = await fetch('http://localhost:3000/qualitys');
                    const qualitys = await response.json();

                    const tableBody = document.querySelector('#qualityTable tbody');
                    tableBody.innerHTML = '';

                    qualitys.forEach(quality => {
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td>${quality.ID_quality}</td>
                            <td>${quality.quality_name}</td>
                        `;
                        tableBody.appendChild(row);
                    });
                } catch (error) {
                    console.error('Error fetching products:', error);
                }
            }

            document.addEventListener('DOMContentLoaded', fetchQuality);
        </script>
    </body>
</html>